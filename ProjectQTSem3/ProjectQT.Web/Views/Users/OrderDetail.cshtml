@model ProjectQT.DataModel.Models.Order
@using ProjectQT.ViewModel.OrderModel
@{
    ViewBag.Title = "OrderDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";

    decimal? totalMoney = 0;
    IEnumerable<OrderDetailModel> listOrderDetail = ViewBag.OrderDetail as IEnumerable<OrderDetailModel>;
}
<div class="banner_inner mb-2">
    <div class="services-breadcrumb">
        <div class="inner_breadcrumb">

            <ul class="short">
                <li>
                    <a href="/">Home</a>
                    <i>|</i>
                </li>
                <li>Order detail</li>
            </ul>
        </div>
    </div>

</div>
<div class="container">
    <table class="table">
        <tr>
            <th>
                Product
            </th>
            <th>
                Attribute
            </th>
            <th>
                OrderBy
            </th>
            <th>
                Quantity
            </th>
            <th>
                CreateAt
            </th>
            <th>
                Price
            </th>
        </tr>

        @foreach (var item in listOrderDetail)
        {
            totalMoney += item.Price;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td>
                    @foreach (var item1 in item.NameAttr)
                    {
                        <p>@item1 </p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateAt)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Price)
                </td>
            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td><b>Total Money:</b></td>
            <td>
                <b>$@totalMoney</b>
            </td>
        </tr>
    </table>
</div>


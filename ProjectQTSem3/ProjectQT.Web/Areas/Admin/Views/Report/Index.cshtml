@model List<ProjectQT.ViewModel.ReportModel.OrderReport>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    var xLabels = Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.xLabels);
    var yValues = Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.yValues);
}

<div class="row">
    <div class="col-12 no-print">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Search</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-widget="remove"><i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Product Name</label>
                            <input type="text" id="nameProductFilter" class="form-control">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Date</label>
                            <input type="text" id="dateFilter" class="form-control datetimepicker-input" data-toggle="datetimepicker" data-target="#dateFilter">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <input id="btnSearch" type="button" class="btn btn-primary" value="Tìm" />
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
</div>

<body>
    <div class="col-12 no-print">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">
                    Revenue statistics chart
                </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-widget="remove"><i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">
                <div class="chart">
                    <canvas id="chart" style="height:500px"></canvas>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
    <div id="loadReport" class="col-12">
        <div class="card card-info">
            <div class="card-header no-print">
                <h3 class="card-title">Revuene Report</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-widget="remove"><i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">
                <div class="invoice p-3 mb-3">
                    <!-- title row -->
                    <div class="row">
                        <div class="col-12">
                            <h4>
                                <i class="fas fa-globe"></i> Auction
                                <small class="float-right">Date: @DateTime.Now.ToString("dd-MM-yyyy")</small>
                            </h4>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- info row -->
                    <div class="row">
                        <div class="col-sm-5 invoice-col">
                            <address>
                                Cau Giay, Ha Noi<br>
                            </address>
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                    <div class="row">
                        <div class="col-12 text-center">
                            <h3>
                                Revuene Report
                            </h3>
                            <br />
                        </div>
                        <!-- /.col -->
                    </div>

                    <!-- Table row -->
                    <div class="row">
                        <div class="col-12 table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Product name</th>
                                        <th>OrderBy</th>
                                        <th>Quantity</th>
                                        <th>CreateAt</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ProductId</td>
                                            <td>@item.CreateBy</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.CreateAt</td>
                                            <td>$@item.Price</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td colspan="3"></td>
                                        <td> <b>Total Price:</b> </td>
                                        <td> <b> <i>$@Model.Sum(i => i.Price) </i></b> </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.row -->

                    <br />
                    <div class="row">
                        <!-- accepted payments column -->
                        <div class="col-8">
                        </div>
                        <!-- /.col -->
                        <div class="col-4  text-center">
                            <i>Ha noi, date @DateTime.Now.Day, month @DateTime.Now.Month, year @DateTime.Now.Year </i>
                            <div>
                                <h5><b>Prepared By</b></h5>
                                <i> (Sign)</i>
                            </div>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                    <!-- this row will not appear when printing -->
                    <div class="row no-print">
                        <div class="col-12">
                            <button onclick="printDiv('loadReport')" class="btn btn-default"><i class="fas fa-print"></i> Print</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<!-- /.content -->
<script>
    function printDiv(divName) {
        var printContents = document.getElementById(divName).innerHTML;
        var originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;
        window.print();

        document.body.innerHTML = originalContents;
    }
</script>
@section scripts
{

    <script>

        $(function () {
            GetReport();
        });
        $('#btnSearch').on('click',
            function (e) {
                var dateModel = {
                    nameProduct: $('#nameProductFilter').val(),
                    endDate: $('#dateFilter').val()
                };
                GetReport(dateModel);
            });

    </script>
    <script type="text/javascript">
        $(function () {
    var chartName = "chart";
        var ctx = document.getElementById(chartName).getContext('2d');
        var data = {
                labels: @Html.Raw(xLabels),
                datasets: [
                  {
                    label               : 'Total Money',
                    backgroundColor     : 'rgba(60,141,188,0.9)',
                    borderColor         : 'rgba(60,141,188,0.8)',
                    pointRadius          : false,
                    pointColor          : '#3b8bba',
                    pointStrokeColor    : 'rgba(60,141,188,1)',
                    pointHighlightFill  : '#fff',
                    pointHighlightStroke: 'rgba(60,141,188,1)',
                    data                : @Html.Raw(yValues),
                  }
                ]
            };

var options = {
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            min: 0,
                            beginAtZero: true,
                            callback: function(value) {
                              return  value.toLocaleString('en-US', {style : 'currency', currency : 'USD'});
                            }
                        },
                        gridLines: {
                            display: true,
                            color: "rgba(255,99,164,0.2)"
                        }
}],
                    xAxes: [{
                        ticks: {
                            min: 0,
                            beginAtZero: true
                        },
                        gridLines: {
                            display: false
                        }
                    }]

                },
                tooltips: {
                  callbacks: {
                    label: function(tooltipItem, chart){
                      var datasetLabel = chart.datasets[tooltipItem.datasetIndex].label || '';
                      return datasetLabel + ': ' + tooltipItem.yLabel.toLocaleString('en-US', {style : 'currency', currency : 'USD'});
                    }
                  }
                }

            };
           var myChart = new  Chart(ctx, {
                    options: options,
                    data: data,
                    type:'bar'
                });
            });
    </script>
}


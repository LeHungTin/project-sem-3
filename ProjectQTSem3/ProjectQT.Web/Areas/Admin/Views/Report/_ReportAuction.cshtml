@model List<ProjectQT.ViewModel.ReportModel.OrderReport>
@{
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");

}

<div class="col-12">
    <div class="card card-info">
        <div class="card-header no-print">
            <h3 class="card-title">Revuene Report</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-widget="remove"><i class="fas fa-times"></i></button>
            </div>
        </div>
        <div class="card-body">
            <div class="invoice p-3 mb-3">
                <!-- title row -->
                <div class="row">
                    <div class="col-12">
                        <h4>
                            <i class="fas fa-globe"></i> <b>QTShop</b>
                            <small class="float-right">Date: @DateTime.Now.ToString("dd-MM-yyyy")</small>
                        </h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-5 invoice-col">
                        <address>
                            Cau Giay, Ha Noi<br>
                        </address>
                    </div>
                    <div class="col-sm-4 invoice-col">
                    </div>
                    <div class="col-sm-4 invoice-col">
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-center">
                        <h3>
                            Revuene Report
                        </h3>
                        <br />
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Product name</th>
                                    <th>OrderBy</th>
                                    <th>Quantity</th>
                                    <th>CreateAt</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ProductId</td>
                                        <td>@item.CreateBy</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.CreateAt</td>
                                        <td>$@item.Price</td>
                                    </tr>
                                }
                                <tr>
                                    <td colspan="3"></td>
                                    <td> <b>Total Price:</b> </td>
                                    <td> <b> <i>$@Model.Sum(i => i.Price) </i></b> </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-8">
                    </div>
                    <div class="col-4  text-center">
                        <i>Ha noi, date @DateTime.Now.Day, month @DateTime.Now.Month, year @DateTime.Now.Year </i>
                        <div>
                            <h5><b>Prepared By</b></h5>
                            <i> (Sign)</i>
                        </div>
                    </div>
                </div>
                <div class="row no-print">
                    <div class="col-12">
                        <button onclick="printReport()" class="btn btn-default"><i class="fas fa-print"></i> Print</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
